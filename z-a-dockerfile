FROM alpine:latest

ENV privileged=true
ENV stdin_open=true

COPY . /usr

RUN apk update
RUN apk add openrc
RUN apk add --no-cache docker
RUN apk add --no-cache docker-compose
RUN rc-update add docker boot
RUN service docker start
RUN dockerd

